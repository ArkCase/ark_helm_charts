#!/bin/bash
set -euo pipefail
. /.functions

set_or_default SSL_DIR
CERT="${SSL_DIR}/haproxy-cert.pem"

set_or_default MAX_WAIT
[[ "${MAX_WAIT}" =~ ^[1-9][0-9]*$ ]] || MAX_WAIT="300"

waiting "Waiting up to ${MAX_WAIT} seconds for the SSL certificates to become available"
START="$(date +%s)"
while true ; do
	[ -s "${CERT}" ] && [ -r "${CERT}" ] && break
	NOW="$(date +%s)"
	[ $(( NOW - START )) -lt ${MAX_WAIT} ] || fail "Timed out waiting for the SSL certificates to become available at [${CERT}]"
	sleep 1 || fail "Sleep interrupted, can't continue waiting for the certificate at [${CERT}]"
done

# Compute the cluster domain
export CLUSTER_DOMAIN="$(get_cluster_domain)"
[ -n "${CLUSTER_DOMAIN}" ] && eyes "The CLUSTER_DOMAIN value is [${CLUSTER_DOMAIN}]"
export CLUSTER_DOMAIN

CMD=("/usr/local/bin/docker-entrypoint.sh" "/usr/local/sbin/haproxy" "-f" "/usr/local/etc/haproxy/haproxy.cfg")
execute "${CMD[@]}"
